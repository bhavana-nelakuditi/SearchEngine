<div id="vimeo_id" style="display: none;">641698842</div><div id="home_video"><div id="home_video_controls"><div id="volume" class="muted"><span class="screen-reader-shortcut">listen</span></div><div id="pause" class="playing"><span class="screen-reader-shortcut">pause</span></div></div><div id="player"><div id="641698842" class="video-box"></div></div></div>
<script src="https://theatreandmusic.uic.edu/wp-content/themes/stm2021/js/vimeo.js"></script>
<script>
var vimeo_id = document.getElementById("vimeo_id");
var uic_vimeo_id = vimeo_id.textContent; // vimeo id entered in post
console.log(uic_vimeo_id);

  function vimeoThumb() {

    var xhr = new XMLHttpRequest();
    xhr.open("GET", "https://vimeo.com/api/v2/video/"+ uic_vimeo_id +".json", true);

    xhr.onload = function (e) {
      if (xhr.readyState === 4) {
        if (xhr.status === 200) {
          var data = xhr.responseText;
          var parsedData = JSON.parse(data);
          thumbSRClarge = parsedData[0].thumbnail_large;
          // split url of large thumbnail at 640
          thumbSplit = thumbSRClarge.split(/\d{3}(?=.jpg)/);
          // add 1280x720 to parts and get bigger thumbnail
          thumbSRC = thumbSplit[0] + '1280x720' + thumbSplit[1];

          // jQuery('.hero-video-screen').css('background-image', 'url(' + thumbSRC + ')');

        } else {
          console.error(xhr.statusText);
        }
      }

    };

    xhr.onerror = function (e) {
      console.error(xhr.statusText);
    };
    xhr.send();

  } // vimeoThumb();

  var options01 = {
    id: uic_vimeo_id,
    controls: false,
  };

  var vimeo01Player = new Vimeo.Player(uic_vimeo_id, options01);

  vimeo01Player.setVolume(0);
  vimeo01Player.play();
  vimeo01Player.setLoop(true);

  function muteVimeo() {
    vimeo01Player.setVolume(0);
  }

  function unMuteVimeo() {
    vimeo01Player.setVolume(1);
  }

  function playVimeo() {
    vimeo01Player.play();
  }

  function pauseVimeo() {
    vimeo01Player.pause();
  }

  jQuery('#volume').on('click', function($) {

    if (jQuery('#volume').hasClass('muted')) {
      jQuery(this).removeClass('muted').addClass('unmuted');
      jQuery(this).html('<span class="screen-reader-shortcut">mute</span>');
      unMuteVimeo();
    } else if (jQuery('#volume').hasClass('unmuted')) {
      jQuery(this).removeClass('unmuted').addClass('muted');
      jQuery(this).html('<span class="screen-reader-shortcut">listen</span>');
      muteVimeo();
    }

  });

  jQuery('#pause').on('click', function($) {

    if (jQuery('#pause').hasClass('playing')) {
      jQuery(this).removeClass('playing').addClass('paused');
      jQuery(this).html('<span class="screen-reader-shortcut">play</span>');
      pauseVimeo();
    } else if (jQuery('#pause').hasClass('paused')) {
      jQuery(this).removeClass('paused').addClass('playing');
      jQuery(this).html('<span class="screen-reader-shortcut">pause</span>');
      playVimeo();
    }

  });


</script>

